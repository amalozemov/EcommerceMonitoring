<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
    </startup>
  
    <connectionStrings>
      <add name="ECMonitoring" connectionString="Data Source=STAS-PC\SQLEXPRESS;Initial Catalog=ECMonitoring;Integrated Security=True" providerName="System.Data.EntityClient"/>
    </connectionStrings>
  
    <appSettings>
      <add key="ClientRequestWaiting" value="3000"/>
      <add key="RepeatPingEvery" value="1500"/>
      <add key="PingErrorsCountMax" value="10"/>
      <add key="PingWaitingResponse" value="1000"/>
      <add key="DebugLevel" value="Trace" />
      <add key="IsConsoleLog" value="true" />
      <add key="ResourceInfoConnectWaiting" value="1"/>
      <add key="RepeatResourceRequestEvery" value="1000"/>
    </appSettings>
  
    <system.serviceModel>
      <services>
        <service name="ECMonitoring.Service.ECMService" behaviorConfiguration="mexBehavior">
          <endpoint address="ECMonitoring.Service.ECMService" binding="basicHttpBinding" contract="ECMonitoring.Service.IECMService"></endpoint>
          <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange"></endpoint>
          <host>
            <baseAddresses>
              <add baseAddress="http://localhost:8733"/>
            </baseAddresses>
          </host>
        </service>
      </services>
      <behaviors>
        <serviceBehaviors>
          <behavior name="mexBehavior">
            <serviceMetadata httpGetEnabled="true"/>
          </behavior>
        </serviceBehaviors>
      </behaviors>
    </system.serviceModel>
</configuration>