    <h2>Основная область</h2>
    <br />

    @foreach (var endPoint in Model)
    {
        //@Html.ActionLink(service.Name, "Index", new { serviceId = endPoint.Id });<br />
        @*@Html.Label(endPoint.Id.ToString())<br />*@
        @*@Html.Label(endPoint.Name)<br />*@

        <p style="margin-left: 25px;">@Html.Label(endPoint.Name)</p>
        foreach (var metric in endPoint.Metrics)
        {
            @*<p style="margin-left: 75px;">@Html.Label(metric.Name)</p>*@
            if (metric.MetricType == 0)
            {
                @Html.Partial("LANMetric", metric)
            }
            else
            {
                @Html.Partial("ResourceUsageMetric", metric)
            }
        }
    }
</div>
