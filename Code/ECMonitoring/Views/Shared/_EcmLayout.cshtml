<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ECM Monitor</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/Ecm/main.css?v=23" />
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container heder_panel">
            <div class="main_header">ECM</div>
            @RenderSection("user_header", required: false)
        </div>
    </div>

    <div>
        <div class="container body-content">
            @RenderBody()
            <div id="footer">
                <hr />
                <footer class="footer login_color">
                    <p>&copy; @DateTime.Now.Year – Кафедра Информатики и вычислительной техники</p>
                </footer>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>
